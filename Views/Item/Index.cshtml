@{
    ViewData["Title"] = "Items";
}
<body>
    <div class="container mt-3">
        <!-- Добавленный отступ -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Используем Flexbox для выравнивания и расположения элементов -->
            <a href="/Item/Create" class="btn btn-primary">Add Shelf</a>
            <div style="width: 10%;"></div> <!-- Пустой блок для создания отступа (10% от ширины родительского контейнера) -->


            @* <div>
                <label for="storeComboBox">Select Store:</label>
                @Html.DropDownList("storeComboBox", ViewBag.CategoryList as SelectList, new { id = "storeComboBox" })
            </div>

            <div>
                <label for="storeComboBox">Select Store:</label>
                @Html.DropDownList("storeComboBox", ViewBag.ShelfList as SelectList, new { id = "storeComboBox" })
            </div> *@
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Category</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Price</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Shelf.ShelfName</td>
                        <td>
                            <form asp-controller="Item" asp-action="Edit" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn-link">Edit</button>
                            </form>
                            <form asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this shelf?');">
                                <button type="submit" class="btn-link">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

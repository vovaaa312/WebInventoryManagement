@{
    ViewData["Title"] = "Stores";
}

<div>
    <a href="/Store/Create" class="btn btn-primary">Add Store</a>


    <table class="table">
        <thead>
            <tr>
                <th>Store Name</th>
                <th>Shelf Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.StoreName</td>
                    <td>@store.ShelfCount</td>
                    <td>
                        <form asp-controller="Store" asp-action="Edit" asp-route-id="@store.Id" method="post">
                            <button type="submit" class="btn-link">Edit</button>
                        </form>
                        <form asp-controller="Store" asp-action="Delete" asp-route-id="@store.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this store?');">
                            <button type="submit" class="btn-link">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>




</div>
